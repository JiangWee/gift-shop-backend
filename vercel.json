{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/uploads/(.*)",
      "destination": "/api/uploads/:1"
    }
  ]
}